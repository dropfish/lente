<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/color_layout"
  >
  
  
  <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1">
    
    <TableRow>
    <RelativeLayout
    	android:layout_width="fill_parent"
  		android:layout_height="fill_parent">
  		
	    <TextView
	    	android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
	    	android:id="@+id/text_header"
	        android:text="Text"
	        android:textSize="50dip"
	        android:layout_alignParentLeft="true"
	        android:padding="3dip"/>
	            
	    <TextView
	    	android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
	    	android:id="@+id/background_header"
			android:layout_alignParentRight="true"
	    	android:textSize="50dip"
	        android:text="Background"
	        android:padding="3dip" />
	        
	        </RelativeLayout>
    </TableRow>
    
    <TableRow>
	    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:stretchColumns="*"
	    android:layout_gravity="bottom">
	    	
	    	<TableRow>
	        	<ImageButton
				  android:id="@+id/white_text"
				  android:src="@drawable/white"
				  android:layout_width="100dip"
				  android:layout_height="100dip"
				  android:layout_weight="1"/>
				  
				<ImageButton
				  android:id="@+id/dark_blue_swatch"
				  android:src="@drawable/dark_blue"
				  android:layout_width="100dip"
				  android:layout_height="100dip"
				  android:layout_weight="1"/>
				  
				  <Button
				  android:text="Apply"
				  android:id="@+id/apply_button"
				  android:layout_gravity="center"
				  android:paddingLeft="50dip"
				  android:paddingRight="50dip">
				  </Button>
				  
				  <ImageButton
				  android:id="@+id/white_background"
				  android:src="@drawable/white"
				  android:layout_width="100dip"
				  android:layout_height="100dip"
				  android:layout_weight="1"/>
				  
				<ImageButton
				  android:id="@+id/light_blue_swatch"
				  android:src="@drawable/light_blue"
				  android:layout_width="100dip"
				  android:layout_height="100dip"
				  android:layout_weight="1"/>
	        </TableRow>
	        
	        <TableRow>
	        	<ImageButton
				  android:id="@+id/black_text"
				  android:src="@drawable/black"
				  android:layout_width="100dip"
				  android:layout_height="100dip"
				  android:layout_weight="1"/>
				<ImageButton
				  android:id="@+id/dark_red_swatch"
				  android:src="@drawable/dark_red"
				  android:layout_width="100dip"
				  android:layout_height="100dip"
				  android:layout_weight="1"/>
				  
				  <Button
				  android:text="Cancel"
				  android:id="@+id/cancel_button"
				  android:layout_gravity="center"
				  android:paddingLeft="50dip"
				  android:paddingRight="50dip">
				  </Button>
				  
				  <ImageButton
				  android:id="@+id/pink_swatch"
				  android:src="@drawable/pink"
				  android:layout_width="100dip"
				  android:layout_height="100dip"
				  android:layout_weight="1"/>
				  
				<ImageButton
				  android:id="@+id/black_background"
				  android:src="@drawable/black"
				  android:layout_width="100dip"
				  android:layout_height="100dip"
				  android:layout_weight="1"/>
	        </TableRow>
		</TableLayout>
	</TableRow>
</TableLayout>
</RelativeLayout>